{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KoreanStoryPages",
  "description": "A schema for a complete Korean short story, divided into pages with content and vocabulary.",
  "type": "object",
  "properties": {
    "pages": {
      "type": "array",
      "description": "A list of pages that make up the story.",
      "minItems": 1,
      "maxItems": 8,
      "items": {
        "type": "object",
        "properties": {
          "englishSummary": {
            "type": "string",
            "description": "A concise, one-sentence summary of the page's content in English.",
            "pattern": "^[A-Za-z0-9 ,.?!'\"-;:()\\[\\]…]+$"
          },
          "content": {
            "type": "string",
            "description": "페이지의 한국어 내용입니다. 단락은 줄 바꿈 문자로 구분됩니다.",
            "pattern": "^[\\uAC00-\\uD7A3\\u1100-\\u11FF\\u3130-\\u318F\\uA960-\\uA97F\\uD7B0-\\uD7FF0-9 ,.?!'\"-;:_\\n\\[\\]…―]+$"
          },
          "vocabulary": {
            "type": "array",
            "description": "A list of key vocabulary words from the page.",
            "minItems": 1,
            "maxItems": 10,
            "items": {
              "type": "object",
              "properties": {
                "word": {
                  "type": "string",
                  "description": "한국어 어휘 단어입니다.",
                  "pattern": "^[\\uAC00-\\uD7A3\\u1100-\\u11FF\\u3130-\\u318F\\uA960-\\uA97F\\uD7B0-\\uD7FF ]+$"
                },
                "translation": {
                  "type": "string",
                  "description": "The English translation of the word.",
                  "pattern": "^[A-Za-z0-9'() -]+$"
                }
              },
              "required": ["word", "translation"]
            }
          }
        },
        "required": ["englishSummary", "content", "vocabulary"]
      }
    }
  },
  "required": ["pages"]
}