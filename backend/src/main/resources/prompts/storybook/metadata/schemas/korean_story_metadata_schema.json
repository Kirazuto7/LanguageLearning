{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KoreanStoryMetadata",
  "description": "A schema for a Korean story's metadata, including title, native title, and topic.",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The creative and engaging story title in English.",
      "pattern": "^[A-Za-z0-9 ,.?!'\"-;:()\\[\\]…]+$"
    },
    "nativeTitle": {
      "type": "string",
      "description": "제목의 정확한 한국어 번역.",
      "pattern": "^[\\uAC00-\\uD7A3\\u1100-\\u11FF\\u3130-\\u318F\\uA960-\\uA97F\\uD7B0-\\uD7FF\\u4E00-\\u9FFF0-9 ,.?!'\"-;:…“”‘’·―]+$"
    },
    "topic": {
      "type": "string",
      "description": "The final topic of the story in English.",
      "pattern": "^[A-Za-z0-9 ,.?!'\"-;:()\\[\\]…]+$"
    }
  },
  "required": ["title", "nativeTitle", "topic"]
}