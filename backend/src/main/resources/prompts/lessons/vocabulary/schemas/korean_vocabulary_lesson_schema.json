{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KoreanVocabularyLesson",
  "description": "A schema for a Korean vocabulary lesson component.",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the vocabulary lesson in English."
    },
    "vocabularies": {
      "type": "array",
      "description": "A list of vocabulary words related to the topic.",
      "minItems": 1,
      "maxItems": 20,
      "items": {
        "type": "object",
        "properties": {
          "englishTranslation": {
            "type": "string",
            "description": "The English translation of the word.",
            "pattern": "^[A-Za-z0-9'() -]+$"
          },
          "hangul": {
            "type": "string",
            "description": "단어를 한국어 한글로 표기합니다.",
            "pattern": "^[\\uAC00-\\uD7A3\\u1100-\\u11FF\\u3130-\\u318F\\uA960-\\uA97F\\uD7B0-\\uD7FF ]+$"
          },
          "hanja": {
            "description": "해당하는 경우, 한자로 표기합니다.",
            "oneOf": [
              { "type": "null" },
              {
                "type": "string",
                "pattern": "^[\\u2E80-\\u2EFF\\u2F00-\\u2FDF\\u3000-\\u303F\\u31C0-\\u31EF\\u3200-\\u32FF\\u3300-\\u33FF\\u3400-\\u4DBF\\u4E00-\\u9FFF\\uF900-\\uFAFF\\uFE30-\\uFE4F ]*$"
              }
            ]
          },
          "romaja": {
            "type": ["string", "null"],
            "description": "The romaja (romanized) spelling of the word.",
            "pattern": "^[A-Za-z\\u00C0-\\u00FF\\u0100-\\u017F -]+$"
          }
        },
        "required": ["englishTranslation", "hangul"]
      }
    }
  },
  "required": ["title", "vocabularies"]
}