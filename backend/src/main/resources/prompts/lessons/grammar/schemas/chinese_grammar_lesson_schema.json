{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ChineseGrammarLesson",
  "description": "A schema for a Chinese grammar lesson.",
  "type": "object",
  "properties": {
    "title": { "type": "string", "description": "The title of the lesson in English." },
    "grammarConcept": {
      "type": "string",
      "description": "The name of the grammar concept, allowing both English and Chinese characters.",
      "pattern": "^[A-Za-z\\u00C0-\\u00FF\\u0100-\\u017F\\u4E00-\\u9FFF\\u3400-\\u4DBF\\uF900-\\uFAFF0-9 ,.?!'\"-;:()/\\[\\]…。「」“”‘’《》【】、：；—·～（）？！，\\-]+$"
    },
    "explanation": {
      "type": "string",
      "description": "A clear explanation of the grammar concept, allowing both English and Chinese characters.",
      "pattern": "^[A-Za-z\\u00C0-\\u00FF\\u0100-\\u017F\\u4E00-\\u9FFF\\u3400-\\u4DBF\\uF900-\\uFAFF0-9 ,.?!'\"-;:()*\\-/\\[\\]…。「」“”‘’《》【】、：；—·～（）？！，\\n]+$"
    },
    "exampleSentences": {
      "type": "array",
      "minItems": 1,
      "maxItems": 15,
      "items": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "description": "完整的中文例句。",
            "pattern": "^[\\u4E00-\\u9FFF\\u3400-\\u4DBF\\uF900-\\uFAFF0-9 ,.?!'\"-;:/\\[\\]…。「」“”‘’《》【】、：；—·～？！，\\n]+$"
          },
          "translation": {
            "type": "string",
            "description": "The English translation of the sentence.",
            "pattern": "^[A-Za-z0-9 ,.?!'\"-;:()\\[\\]…\\n]+$"
          }
        },
        "required": ["text", "translation"]
      }
    }
  },
  "required": ["title", "grammarConcept", "explanation", "exampleSentences"]
}