{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JapaneseGrammarLesson",
  "description": "A schema for a Japanese grammar lesson.",
  "type": "object",
  "properties": {
    "title": { "type": "string", "description": "The title of the lesson in English." },
    "grammarConcept": {
      "type": "string",
      "description": "The name of the grammar concept, allowing both English and Japanese characters.",
      "pattern": "^[A-Za-z\\u00C0-\\u00FF\\u0100-\\u017F\\u3040-\\u309F\\u30A0-\\u30FF\\u4E00-\\u9FFF\\u3400-\\u4DBF\\uF900-\\uFAFF\\u3005\\u30FC0-9 ,.?!'\"-;:()/\\[\\]…。「」“”\\n、\\-]+$"
    },
    "explanation": {
      "type": "string",
      "description": "A clear explanation of the grammar concept, allowing both English and Japanese characters.",
      "pattern": "^[A-Za-z\\u00C0-\\u00FF\\u0100-\\u017F\\u3040-\\u309F\\u30A0-\\u30FF\\u4E00-\\u9FFF\\u3400-\\u4DBF\\uF900-\\uFAFF\\u3005\\u30FC0-9 ,.?!'\"-;:()*\\-/\\[\\]…。「」“”\\n、]+$"
    },
    "exampleSentences": {
      "type": "array",
      "minItems": 1,
      "maxItems": 15,
      "items": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "description": "日本語の完全な例文です。",
            "pattern": "^[\\u3040-\\u309F\\u30A0-\\u30FF\\u4E00-\\u9FFF\\u3400-\\u4DBF\\uF900-\\uFAFF\\u3005\\u30FC0-9 ,.?!'\"-;:/\\[\\]…。「」“”\\n、]+$"
          },
          "translation": {
            "type": "string",
            "description": "The English translation of the sentence.",
            "pattern": "^[A-Za-z0-9 ,.?!'\"-;:()\\[\\]…\\n]+$"
          }
        },
        "required": ["text", "translation"]
      }
    }
  },
  "required": ["title", "grammarConcept", "explanation", "exampleSentences"]
}