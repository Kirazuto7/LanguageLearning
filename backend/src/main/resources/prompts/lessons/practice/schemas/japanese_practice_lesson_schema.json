{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JapanesePracticeLesson",
  "description": "A schema for a Japanese practice lesson with open-ended questions.",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the practice section in English."
    },
    "instructions": {
      "type": "string",
      "description": "A brief explanation of what the user should do."
    },
    "questions": {
      "type": "array",
      "minItems": 1,
      "maxItems": 15,
      "items": {
        "type": "object",
        "properties": {
          "questionText": {
            "type": "string",
            "description": "自由回答形式の質問を日本語で。",
            "pattern": "^[A-Za-z\\u3040-\\u309F\\u30A0-\\u30FF\\u4E00-\\u9FFF\\u3400-\\u4DBF\\uF900-\\uFAFF\\u3005\\u30FC0-9 ,.?!'\"-;:()/\\[\\]…。「」“”\\n、]+$",
            "maxLength": 400
          },
          "answer": {
            "type": "null",
            "description": "This must always be null."
          },
          "options": {
            "type": "array",
            "description": "This must always be an empty array.",
            "maxItems": 0
          }
        },
        "required": ["questionText"]
      }
    }
  },
  "required": ["title", "instructions", "questions"]
}