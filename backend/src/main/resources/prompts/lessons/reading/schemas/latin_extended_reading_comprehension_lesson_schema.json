{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LatinExtendedReadingComprehensionLesson",
  "description": "A schema for a reading comprehension lesson in a Latin-based language.",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the reading lesson in English."
    },
    "story": {
      "type": "string",
      "description": "A short story in the native language.",
      "pattern": "^[A-Za-z\\u00C0-\\u00FF\\u0100-\\u017F0-9 ,.?!'\"-;:¿¡*\\-/\\[\\]…\\n]+$"
    },
    "questions": {
      "type": "array",
      "minItems": 1,
      "maxItems": 15,
      "items": {
        "type": "object",
        "properties": {
          "questionText": {
            "type": "string",
            "description": "The comprehension question in the native language.",
            "pattern": "^[A-Za-z\\u00C0-\\u00FF\\u0100-\\u017F0-9 ,.?!'\"-;:()¿¡*\\-/\\[\\]…\\n]+$",
            "maxLength": 400
          },
          "answer": {
            "type": "string",
            "description": "The correct answer in the native language, extracted from the story.",
            "pattern": "^[A-Za-z\\u00C0-\\u00FF\\u0100-\\u017F0-9 ,.?!'\"-;:¿¡*\\-/\\[\\]…\\n]+$"
          },
          "answerChoices": {
            "type": "array",
            "minItems": 2,
            "maxItems": 10,
            "items": {
              "type": "string",
              "description": "A possible answer choice in the native language.",
              "pattern": "^[A-Za-z\\u00C0-\\u00FF\\u0100-\\u017F0-9 ,.?!'\"-;:¿¡*\\-/\\[\\]…\\n]+$"
            }
          }
        },
        "required": ["questionText", "answer", "answerChoices"]
      }
    }
  },
  "required": ["title", "story", "questions"]
}