{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ChineseChapterMetadata",
  "description": "A schema for a Chinese chapter's title and its native language translation.",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The creative and engaging chapter title in English.",
      "pattern": "^[A-Za-z0-9 ,.?!'\"-;:()\\[\\]…]+$"
    },
    "nativeTitle": {
      "type": "string",
      "description": "标题的准确中文翻译。",
      "pattern": "^[\\u4E00-\\u9FFF\\u3400-\\u4DBF\\uF900-\\uFAFF\\u2E80-\\u2EFF\\u2F00-\\u2FDF\\u3000-\\u303F\\u31C0-\\u31EF\\u3200-\\u32FF\\u3300-\\u33FF\\uFE30-\\uFE4F0-9 ,.?!'\"-;:\\[\\]…。「」“”‘’《》【】、：；—·～？！―]+$"
    }
  },
  "required": ["title", "nativeTitle"]
}