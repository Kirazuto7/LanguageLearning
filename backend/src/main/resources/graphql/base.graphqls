scalar LocalDateTime

# Base interface for all book types (LessonBook, StoryBook, etc.)
interface Book {
    id: ID!
    title: String!
    difficulty: String!
    language: String!
    createdAt: LocalDateTime!
}

# Base interface for all lessonChapter types
interface Chapter {
    id: ID!
    title: String!
    nativeTitle: String!
}

# Base interface for all page types
interface Page {
    id: ID!
}